	<mx:Script source="FireworksConsoleMain.as" />
	
	<mx:ApplicationControlBar 
		dock="true" 
		paddingTop="4" 
		paddingRight="4" 
		paddingBottom="4"
		paddingLeft="4"
	>
		<mx:Button 
			label="Clear"
			toolTip="Clear the history area" 
			click="clearOutput();"
		/>
	</mx:ApplicationControlBar>

	<mx:VDividedBox
		backgroundColor="0xDADEE3"
		width="100%"
		height="100%"
		paddingTop="10"
		paddingRight="4"
		paddingBottom="4"
		paddingLeft="4"
	>
		<mx:TextArea id="Input"
			width="100%"
		/>
		<mx:TextArea id="Output"
			width="100%"
			editable="false"
			horizontalScrollPolicy="off" 
		/>
	</mx:VDividedBox>
	
</mx:Application>
